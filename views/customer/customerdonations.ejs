<!DOCTYPE html>
<html lang="en">
<head>
  <link rel="icon" href="/images/favicon.ico">
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
<link rel="stylesheet" href="/pages/customerdonations.css">
<title>My Donations</title>
</head>
<body>

    <nav class="nav nav_top">
        <div class="logo">
            <a href="/"><img src="/images/logo.png" width="250"></a>
        </div>
        <div class="nav_side">
            <a href="/">HOME</a>
            <a href="/about">ABOUT US</a>
            <a href="/customer/dashboard">DASHBOARD</a>
            <a href="/customer/logout">LOGOUT</a>
        </div>
    </nav>

    <blockquote class="blockquote text-center">
        <h1>Booking Details</h1>
    </blockquote>
    
    <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">S.No.</th>
            <th scope="col">Order ID</th>
            <th scope="col">Name of Recipient</th>
            <th scope="col">Amount(in Rs)</th>
            <th scope="col">Date and Time</th>
            <th scope="col">Status</th>

          </tr>
        </thead>
        <tbody>
            <%
            if(details.length!=0){
            var i=1;
            details.forEach(function(data){
            %>
          <tr>
            <th scope="row"><%=i; %></th>
            <td><%=data.orderId %></td>
            <td><%=data.name %></td>
            <td><%=(data.amount)/100 %></td>
            <td><%=data.createdAt %></td>
            <td><%=data.status %></td>
          </tr>
          <%  i++; }) %>
          <% } else{ %>
              <tr>
                  <td colspan="7">No Data Found</td>
              </tr>
          <% } %>
        </tbody>
      </table>
</body>
</html>

